<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dz.esi.team.appprototype">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_with_white_background"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".IntroActivity"
            android:label="appInto"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePage"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".SearchPlantesActivity"
            android:label="@string/title_activity_search_plantes"
            android:parentActivityName=".HomePage"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dz.esi.team.appprototype.HomePage" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <activity android:name=".ImageRecognitionActivity"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>