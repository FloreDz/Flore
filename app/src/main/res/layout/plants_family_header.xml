<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="@color/white_color_smoke">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:id="@+id/plants_family_name"
        android:textAlignment="center"
        android:textColor="@color/gray_color_light"
        android:textStyle="normal|bold|italic"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:id="@+id/plants_family_size"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/plants_family_name"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/plants_family_name"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>