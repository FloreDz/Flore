<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/plant_image_in_result_view"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/plant_sci_name_in_result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plant_image_in_result_view"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/plant_image_in_result_view"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/plant_family_in_result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray_color_dark"
        android:gravity="center_vertical"
        android:text="family"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plant_sci_name_in_result_view"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/plant_sci_name_in_result_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/plant_percentage_in_result_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_family_in_result_view"
        app:arc_progress="55"
        app:arc_unfinished_color="@color/gray_color_light"
        app:arc_finished_color="@color/logo_green_medium"
        app:arc_text_size="13sp"
        app:arc_suffix_text_size="13sp"
        app:arc_text_color="@color/logo_green_medium"
        app:arc_stroke_width="3dp"
        app:arc_suffix_text=" "
        app:arc_suffix_text_padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>